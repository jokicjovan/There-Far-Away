<UserControl x:Class="Three_Far_Away.Views.JourneyPreviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Three_Far_Away.Views"
             xmlns:converters="clr-namespace:Three_Far_Away.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="430" d:DesignWidth="750"
             Loaded="OnLoaded"
             FocusVisualStyle="{x:Null}">
    <UserControl.Resources>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="50 0 0 0">
        <ScrollViewer 
                HorizontalScrollBarVisibility="Hidden" 
                VerticalScrollBarVisibility="Auto" 
                CanContentScroll="True">
            <Grid  Margin="20 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <TextBlock 
                            Text="{Binding Name}" 
                            HorizontalAlignment="Center" 
                            FontSize="28"
                            FontWeight="Bold"
                            TextWrapping="Wrap"
                            MaxWidth="400"/>
                </Grid>
                <Grid Grid.Row="1" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                            Text="{Binding StartDate}" 
                            HorizontalAlignment="Center" 
                            FontSize="20"/>
                    <TextBlock Grid.Column="1" 
                            Text=" - " 
                            HorizontalAlignment="Center" 
                            FontSize="20"/>
                    <TextBlock Grid.Column="2"
                            Text="{Binding EndDate}" 
                            HorizontalAlignment="Center" 
                            FontSize="20"/>
                </Grid>
                <Grid Grid.Row="2" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" 
                            Text="$" 
                            HorizontalAlignment="Center" 
                            FontSize="28"
                            Foreground="#8BC34A"
                            FontWeight="Bold"/>
                    <TextBlock Grid.Column="1" 
                            Text="{Binding Price}" 
                            HorizontalAlignment="Center" 
                            FontSize="28"
                            Foreground="#8BC34A"
                            FontWeight="Bold"/>
                </Grid>
                <Grid Grid.Row="3" HorizontalAlignment="Center" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon 
                            Kind="Location" 
                            HorizontalAlignment="Center" 
                            Height="30" 
                            VerticalAlignment="Center" 
                            Width="30"/>
                    <TextBlock Grid.Column="1" 
                                   Text="Start point" 
                                   HorizontalAlignment="Center" 
                                   FontSize="25"
                                   FontWeight="Bold"
                                   Margin="10, 0, 0,0"/>
                </Grid>
                <Grid Grid.Row="4">
                    <!-- Dinamicki dodati lokacije -->
                    <ItemsControl ItemsSource="{Binding LocationListItemViewModels}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:LocationListItemView Margin="0,10" Width="251"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
                <Grid Grid.Row="5" HorizontalAlignment="Center" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon 
                            Kind="Location"
                            HorizontalAlignment="Center" 
                            Height="30" 
                            VerticalAlignment="Center" 
                            Width="30"/>
                    <TextBlock Grid.Column="1" 
                                   Text="End point" 
                                   HorizontalAlignment="Center" 
                                   FontSize="25"
                                   FontWeight="Bold"
                                   Margin="10, 0, 0,0"/>

                </Grid>
                <Grid Grid.Row="6" Width="400" Height="400" Background="#EBB9B9">
                    <!-- Mapa -->
                </Grid>
                <Grid Grid.Row="7"
                          HorizontalAlignment="Center"
                          Margin="20 20 20 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button  
                        Grid.Column="0"
                        Margin="10,10,10, 10" 
                        Background="#8AA7F0"
                        BorderBrush="#8AA7F0"
                        Height="45"
                        Width="130"
                        Command="{Binding ShowJourneyPassengersCommand}"
                        Visibility="{Binding IsAgent, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <!--
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="0"
                                                CornerRadius="20">
                                    <ContentPresenter 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        -->
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                                        Kind="People" 
                                        Margin="1,10,5,10"/>
                            <TextBlock 
                                        Text="Passengers" 
                                        VerticalAlignment="Center" 
                                        Margin="0,10,10,15" />
                        </StackPanel>
                    </Button>
                    <Button  
                        Grid.Column="1"
                        Margin="0,10,10, 10" 
                        Background="#C1F08A"
                        BorderBrush="#C1F08A"
                        Height="45"
                        Width="130"
                        Command="{Binding NavigateToEditJourneyCommand}"
                        Visibility="{Binding IsAgent, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <!--
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="0"
                                                CornerRadius="20">
                                    <ContentPresenter 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        -->
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                                        Kind="Pencil" 
                                        Margin="1,10,5,10"/>
                            <TextBlock 
                                        Text="Edit" 
                                        VerticalAlignment="Center" 
                                        Margin="0,10,10,15" />
                        </StackPanel>
                    </Button>
                    <Button 
                        Grid.Column="2"
                        Margin="0,10,10, 10" 
                        Background="#EBB9B9"
                        BorderBrush="#EBB9B9"
                        Height="45"
                        Width="130"
                        Command="{Binding DeleteJourneyCommand}"
                        Visibility="{Binding IsAgent, Converter={StaticResource BooleanToVisibilityConverter}}">

                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                                        Kind="Trash" 
                                        Margin="1,10,5,10"/>
                            <TextBlock 
                                        Text="Delete" 
                                        VerticalAlignment="Center" 
                                        Margin="0,10,10,15"/>
                        </StackPanel>
                        <!--
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="0"
                                                CornerRadius="20">
                                    <ContentPresenter 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        -->
                    </Button>
                    <Button  
                        Grid.Column="0"
                        Margin="10,10,10, 10" 
                        Background="#8AA7F0"
                        BorderBrush="#8AA7F0"
                        Height="45"
                        Width="150"
                        IsEnabled="{Binding IsBuyEnabled}"
                        Command="{Binding BuyCommand}"
                        Visibility="{Binding IsAgent, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <!--
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="0"
                                            CornerRadius="20">
                                    <ContentPresenter 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        -->
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                                    Kind="Dollar" 
                                    Margin="1,10,5,10"/>
                            <TextBlock 
                                    Text="Buy" 
                                    VerticalAlignment="Center" 

                                    Margin="0,10,10,15" />
                        </StackPanel>
                    </Button>
                    <Button   
                        Grid.Column="1"
                        Margin="0,10,10, 10" 
                        Background="#C1F08A"
                        BorderBrush="#C1F08A"
                        Height="45"
                        Width="150"
                        IsEnabled="{Binding IsReserveEnabled}"
                        Command="{Binding ReserveCommand}"
                        Visibility="{Binding IsAgent, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                        <!--
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="0"
                                                CornerRadius="20">
                                    <ContentPresenter 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        -->
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon 
                                        Kind="CalendarPlus" 
                                        Margin="1,10,5,10"/>
                            <TextBlock 
                                        Text="{Binding ReserveButtonText}" 
                                        VerticalAlignment="Center" 
                                        Margin="0,10,10,15" />
                        </StackPanel>
                    </Button>
                </Grid>
                <TextBlock 
                    Grid.Row="8"
                    Margin="0 0 0 20"
                    FontSize="16"
                    FontWeight="DemiBold"
                    HorizontalAlignment="Center"
                    Text="{Binding InfoMessage}"
                    Foreground="CornflowerBlue"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
