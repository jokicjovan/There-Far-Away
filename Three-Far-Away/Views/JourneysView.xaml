<UserControl x:Class="Three_Far_Away.Views.JourneysView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:components="clr-namespace:Three_Far_Away.Components"
             xmlns:local="clr-namespace:Three_Far_Away.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="430" d:DesignWidth="700"
             Loaded="OnLoaded"
             FocusVisualStyle="{x:Null}">
    <UserControl.InputBindings>
        <KeyBinding Modifiers="Ctrl" Key="Right" Command="{Binding NextPageCommand}"/>
        <KeyBinding Modifiers="Ctrl" Key="Left" Command="{Binding PreviousPageCommand}"/>
    </UserControl.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Available Journeys"  Margin="0,10,20, 10" FontWeight="Bold" FontSize="24" />
        </StackPanel>
        <Button  
            Margin="0,10,10, 10" 
            HorizontalAlignment="Right" 
            Visibility="{Binding AddJourneyVisibility}"
            Command="{Binding NavigateToCreateJourneyCommand}"
            Background="#639B22">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="0"
                            CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Plus" Margin="10,0,5,2" VerticalAlignment="Center"/>
                <TextBlock 
                    Text="Add Journey" 
                    VerticalAlignment="Center"
                    Margin="0,0,10,5" />
            </StackPanel>
        </Button>

        <!-- Content Section -->
        <Grid Grid.Row="1">
            <!-- Add your content here -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" >
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <ItemsControl ItemsSource="{Binding JourneyCardViewModels, Mode=TwoWay}"  Focusable="False">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:JourneyCardView Margin="0 30 10,10" Height="85" Width="310"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Grid>
            </Grid>
            <Grid Grid.Row="1"  HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0, 0, 0, 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button 
                    Content="Previous" 
                    Margin="5" 
                    HorizontalAlignment="Left" 
                    Foreground="White" 
                    BorderBrush="#7A7A7A" 
                    Background="#7A7A7A" 
                    Command="{Binding PreviousPageCommand}"
                    Visibility="{Binding PreviousPageVisibility}"/>
                <Button 
                    Content="Next" 
                    Margin="5 5 10 5" 
                    HorizontalAlignment="Right" 
                    Grid.Column="1" 
                    Foreground="White" 
                    Command="{Binding NextPageCommand}" 
                    Visibility="{Binding NextPageVisibility}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
